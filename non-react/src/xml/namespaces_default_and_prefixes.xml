<?xml version="1.0"?>

<!-- This file is using a DEFAULT NAMESPACE, AS WELL as a prefix bound to a different
     namespace. In this way, we can keep MOST of the tags belonging to the default
     namespace, but where we need a different language, we can use the prefix (w3).
     Combining both default and prefixed namespaces gives you the greatest amount
     of flexibility.  -->

<toms_tables xmlns="http://tomsgreattables.com/ns"
             xmlns:w3="http://www.w3.or/TR/html4">

    <!-- Furniture Table -->
    <table>
        <finish>Clearcoat</finish>
        <wood>Oak</wood>
        <dimensions>8 x 10 feet</dimensions>
    </table>

    <!-- HTML Table -->
    <!-- These tags use the prefix to show that they belong to a different vocabulary
        than the default namespace -->
    <w3:table>
        <w3:tr>
            <w3:th>Dining Room</w3:th>
            <w3:th>Kitchen Tables</w3:th>
            <w3:th>Turned Tables</w3:th>
        </w3:tr>
        <w3:tr>
            <w3:td></w3:td>
            <w3:td></w3:td>
            <w3:td></w3:td>
        </w3:tr>
    </w3:table>

    <living_room>
        <table>
            <finish>Lacquer</finish>
            <wood>Teak</wood>
            <dimensions>3x3 Feet</dimensions>
            <!-- This HTML tag does not come inside the <table> tag above. We don't want to
                  have to use a default namespace every time we use a tag from a different
                  vocabulary, so we can use prefixes more effectively here, allowing for
                  less typing. -->
            <w3:div>This is a lovely cofee table for your living room</w3:div>
        </table>
    </living_room>

    <order>1234567890</order>

    <w3:blockquote>
        "I love Tom's Tables. They make my life worth living!" -Tom
    </w3:blockquote>

</toms_tables>
